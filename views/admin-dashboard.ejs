                            </div>
                        </div>
                        <!-- /Architecture Modal -->

                    
                        <script>
                            // Modal logic
                            const modal = document.getElementById('architecture-modal');
                            const openBtn = document.getElementById('add-architecture-btn');
                            const closeBtn = document.getElementById('close-architecture-modal');
                            const form = document.getElementById('architecture-form');
                            let editingId = null;

                            // Highlights logic
                            let highlightsArr = [];

                            function renderHighlights() {
                                const list = document.getElementById('highlights-list');
                                list.innerHTML = '';
                                highlightsArr.forEach((hl, idx) => {
                                    const li = document.createElement('li');
                                    li.style.display = 'flex';
                                    li.style.alignItems = 'center';
                                    li.style.background = '#f0f0f0';
                                    li.style.borderRadius = '4px';
                                    li.style.padding = '0.2rem 0.6rem';
                                    li.style.fontSize = '0.98rem';
                                    li.innerHTML = `
                                        <span>${hl}</span>
                                        <button type="button" class="remove-highlight-btn" data-idx="${idx}" style="margin-left:0.5rem; background:none; border:none; color:#c00; font-size:1.1em; cursor:pointer;">&times;</button>
                                    `;
                                    list.appendChild(li);
                                });
                                // Update hidden input
                                document.getElementById('arch-highlights').value = JSON.stringify(highlightsArr);
                            }

                            function addHighlight() {
                                const input = document.getElementById('arch-highlight-input');
                                const value = input.value.trim();
                                if (value && !highlightsArr.includes(value)) {
                                    highlightsArr.push(value);
                                    renderHighlights();
                                    input.value = '';
                                    input.focus();
                                }
                            }

                            document.addEventListener('DOMContentLoaded', function() {
                                // Add highlight on button click
                                document.getElementById('add-highlight-btn').addEventListener('click', addHighlight);
                                // Add highlight on Enter key
                                document.getElementById('arch-highlight-input').addEventListener('keydown', function(e) {
                                    if (e.key === 'Enter') {
                                        e.preventDefault();
                                        addHighlight();
                                    }
                                });
                                // Remove highlight
                                document.getElementById('highlights-list').addEventListener('click', function(e) {
                                    if (e.target.classList.contains('remove-highlight-btn')) {
                                        const idx = parseInt(e.target.getAttribute('data-idx'));
                                        highlightsArr.splice(idx, 1);
                                        renderHighlights();
                                    }
                                });
                            });

                            function openModal(editData) {
                                modal.style.display = 'flex';
                                document.body.style.overflow = 'hidden';
                                if (editData) {
                                    document.getElementById('modal-arch-title').innerText = 'Edit Architecture';
                                    document.getElementById('arch-id').value = editData._id;
                                    document.getElementById('arch-title').value = editData.title;
                                    document.getElementById('arch-category').value = editData.category;
                                    document.getElementById('arch-description').value = editData.description;
                                    document.getElementById('arch-budgets').value = editData.budgets;
                                    document.getElementById('arch-location').value = editData.location;
                                    // Set highlights
                                    highlightsArr = Array.isArray(editData.highlights) ? [...editData.highlights] : [];
                                    renderHighlights();
                                } else {
                                    document.getElementById('modal-arch-title').innerText = 'Add Architecture';
                                    form.reset();
                                    highlightsArr = [];
                                    renderHighlights();
                                    document.getElementById('arch-id').value = '';
                                }
                            }
                            function closeModal() {
                                modal.style.display = 'none';
                                document.body.style.overflow = '';
                                form.reset();
                                highlightsArr = [];
                                renderHighlights();
                                document.getElementById('arch-id').value = '';
                            }
                            openBtn.onclick = () => openModal();
                            closeBtn.onclick = closeModal;
                            window.onclick = function(event) {
                                if (event.target === modal) closeModal();
                            };

                            // Edit button logic
                            document.querySelectorAll('.btn-arch-edit').forEach(btn => {
                                btn.addEventListener('click', function() {
                                    const id = this.getAttribute('data-id');
                                    fetch(`/editArcitecture/${id}`)
                                        .then(res => res.json())
                                        .then(data => openModal(data))
                                        .catch(() => alert('Failed to fetch architecture details.'));
                                });
                            });

                            // Toggle button logic
                            document.querySelectorAll('.btn-arch-toggle').forEach(btn => {
                                btn.addEventListener('click', function() {
                                    const id = this.getAttribute('data-id');
                                    fetch(`/toggleArcitecture/${id}/toggle`, {
                                        method: 'PATCH'
                                    })
                                    .then(res => res.json())
                                    .then(() => location.reload())
                                    .catch(() => alert('Failed to toggle status.'));
                                });
                            });

                            // Delete button logic
                            document.querySelectorAll('.btn-arch-delete').forEach(btn => {
                                btn.addEventListener('click', function() {
                                    const id = this.getAttribute('data-id');
                                    if (confirm('Are you sure you want to delete this architecture?')) {
                                        fetch(`/deleteArcitecture/${id}`, {
                                            method: 'DELETE'
                                        })
                                        .then(res => res.json())
                                        .then(() => location.reload())
                                        .catch(() => alert('Failed to delete.'));
                                    }
                                });
                            });

                            // Form submit logic (add/edit)
                            form.onsubmit = function(e) {
                                e.preventDefault();
                                const id = document.getElementById('arch-id').value;
                                const formData = new FormData(form);
                                // Set highlights as array
                                formData.set('highlights', JSON.stringify(highlightsArr));
                                let url = '/createArcitecture';
                                let method = 'POST';
                                if (id) {
                                    url = `/editArcitecture/${id}`;
                                    method = 'PUT';
                                }
                                fetch(url, {
                                    method,
                                    body: formData
                                })
                                .then(res => {
                                    if (!res.ok) throw new Error('Failed');
                                    return res.json();
                                })
                                .then(() => {
                                    closeModal();
                                    location.reload();
                                })
                                .catch(() => alert('Failed to save architecture.'));
                            };
                        </script>
                    </div>
                    <!-- /main-content -->
                </div>
