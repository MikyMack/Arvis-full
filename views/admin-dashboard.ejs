                                            <option value="Thrissur">Thrissur</option>
                                            <option value="Palakkad">Palakkad</option>
                                            <option value="Malappuram">Malappuram</option>
                                            <option value="Kozhikode">Kozhikode</option>
                                            <option value="Wayanad">Wayanad</option>
                                            <option value="Kannur">Kannur</option>
                                            <option value="Kasaragod">Kasaragod</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="arch-highlights">Highlights</label>
                                        <div id="highlights-input-group" style="display: flex; flex-direction: column; gap: 0.5rem;">
                                            <div style="display: flex; gap: 0.5rem;">
                                                <input type="text" id="arch-highlight-input" placeholder="Add a highlight" autocomplete="off">
                                                <button type="button" id="add-highlight-btn" class="btn btn-secondary" style="white-space:nowrap;">Add</button>
                                            </div>
                                            <ul id="highlights-list" style="display: flex; flex-wrap: wrap; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
                                                <!-- Highlights will be rendered here -->
                                            </ul>
                                            <!-- Hidden input to store highlights as JSON array -->
                                            <input type="hidden" id="arch-highlights" name="highlights">
                                        </div>
                                    </div>
