                        // Helper to build query string for page links
                        function pageUrl(page) {
                            let params = [];
                            if (typeof query === 'object') {
                                for (let key in query) {
                                    if (key !== 'page') params.push(`${encodeURIComponent(key)}=${encodeURIComponent(query[key])}`);
                                }
                            }
                            params.push('page=' + page);
                            return '?' + params.join('&');
                        }
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);
                        if (endPage - startPage < 4) {
                            if (startPage === 1) endPage = Math.min(totalPages, startPage + 4);
                            if (endPage === totalPages) startPage = Math.max(1, endPage - 4);
                        }
                    %>
                    <a class="pagi-elm<%= currentPage === 1 ? ' is-active' : '' %>" href="<%= currentPage > 1 ? pageUrl(currentPage - 1) : '#' %>" aria-label="Previous" <%= currentPage === 1 ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                        <i class="fa-solid fa-angles-left"></i>
                    </a>
                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <a class="pagi-elm<%= i === currentPage ? ' is-active' : '' %>" href="<%= pageUrl(i) %>" aria-label="Page <%= i %>">
                            <%= i %>
                        </a>
                    <% } %>
                    <a class="pagi-elm<%= currentPage === totalPages ? ' is-active' : '' %>" href="<%= currentPage < totalPages ? pageUrl(currentPage + 1) : '#' %>" aria-label="Next" <%= currentPage === totalPages ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                        <i class="fa-solid fa-angles-right"></i>
                    </a>
                </div>
                <% } %>
