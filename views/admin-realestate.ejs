                                    <label for="editImages">Add Images (optional)</label>
                                    <input type="file" id="editImages" name="images" accept="image/*" multiple>
                                </div>
                                <div class="form-group" id="currentImagesContainer" style="margin-bottom:10px;">
                                    <!-- Existing images will be shown here -->
                                </div>
                                <button type="submit" class="tf-button style-1">Update</button>
