                    <!-- Confirm Delete Modal -->
                    <div id="deleteRealEstateModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeModal('deleteRealEstateModal')">&times;</span>
                            <h4>Delete Real Estate</h4>
                            <p>Are you sure you want to delete this real estate listing?</p>
                            <button class="tf-button style-1" id="confirmDeleteBtn">Yes, Delete</button>
                            <button class="tf-button style-3" onclick="closeModal('deleteRealEstateModal')">Cancel</button>
                        </div>
                    </div>

                  

                    <script>
                        let realEstates = <%- JSON.stringify(realEstate || []) %>;
                        let selectedDeleteId = null;
                        let selectedEditId = null;

                        // --- Highlights UI logic ---
                        function createHighlightsInput(containerId, inputId, hiddenInputId) {
                            const container = document.getElementById(containerId);
                            const input = document.getElementById(inputId);
                            const hiddenInput = document.getElementById(hiddenInputId);

                            let highlights = [];

                            function renderChips() {
                                container.innerHTML = '';
                                highlights.forEach((h, idx) => {
                                    const chip = document.createElement('span');
                                    chip.className = 'highlight-chip';
                                    chip.textContent = h;
                                    const remove = document.createElement('span');
                                    remove.className = 'remove-chip';
                                    remove.innerHTML = '&times;';
                                    remove.onclick = () => {
                                        highlights.splice(idx, 1);
                                        renderChips();
                                        hiddenInput.value = JSON.stringify(highlights);
                                    };
                                    chip.appendChild(remove);
                                    container.appendChild(chip);
                                });
                                hiddenInput.value = JSON.stringify(highlights);
                            }

                            input.addEventListener('keydown', function(e) {
                                if (e.key === 'Enter' || e.key === ',') {
                                    e.preventDefault();
                                    let val = input.value.trim();
                                    if (val && !highlights.includes(val)) {
                                        highlights.push(val);
                                        renderChips();
                                    }
                                    input.value = '';
                                }
                            });

                            input.addEventListener('blur', function() {
                                let val = input.value.trim();
                                if (val && !highlights.includes(val)) {
                                    highlights.push(val);
                                    renderChips();
                                }
                                input.value = '';
                            });

                            return {
                                set: (arr) => {
                                    highlights = Array.isArray(arr) ? arr.filter(Boolean) : [];
                                    renderChips();
                                },
                                get: () => highlights.slice()
                            };
                        }

                        // Add Highlights UI
                        const addHighlightsUI = createHighlightsInput('addHighlightsContainer', 'addHighlightsInput', 'addHighlights');
                        // Edit Highlights UI
                        const editHighlightsUI = createHighlightsInput('editHighlightsContainer', 'editHighlightsInput', 'editHighlights');

                        function showModal(id) {
                            document.getElementById(id).style.display = 'block';
                        }
                        function closeModal(id) {
                            document.getElementById(id).style.display = 'none';
                            if(id === 'editRealEstateModal') {
                                document.getElementById('editRealEstateForm').reset();
                                document.getElementById('currentImagesContainer').innerHTML = '';
                                editHighlightsUI.set([]);
                            }
                            if(id === 'addRealEstateModal') {
                                document.getElementById('addRealEstateForm').reset();
                                addHighlightsUI.set([]);
                            }
                        }
                        window.onclick = function(event) {
                            ['addRealEstateModal','editRealEstateModal','deleteRealEstateModal'].forEach(function(id){
                                let modal = document.getElementById(id);
                                if(event.target === modal) modal.style.display = "none";
                            });
                        }

                        function showAddRealEstateModal() {
                            document.getElementById('addRealEstateForm').reset();
                            addHighlightsUI.set([]);
                            showModal('addRealEstateModal');
                        }

                        function showEditRealEstateModal(id) {
                            const estate = realEstates.find(e => e._id === id);
                            if (!estate) return;
                            selectedEditId = id;
                            document.getElementById('editId').value = estate._id;
                            document.getElementById('editTitle').value = estate.title;
                            document.getElementById('editDescription').value = estate.description;
                            document.getElementById('editCategory').value = estate.category;
                            document.getElementById('editLocation').value = estate.location;
                            document.getElementById('editPrice').value = estate.price;
                            document.getElementById('editArea').value = estate.area;
                            editHighlightsUI.set(Array.isArray(estate.highlights) ? estate.highlights : []);
                            // Show current images
                            let html = '';
                            if (estate.images && estate.images.length) {
                                html += '<div style="margin-bottom:8px;">Current Images:</div>';
                                estate.images.forEach(img => {
                                    html += `<img src="${img.url}" alt="" class="realestate-img-thumb" style="margin-right:5px;margin-bottom:5px;">`;
                                });
                            }
                            document.getElementById('currentImagesContainer').innerHTML = html;
                            showModal('editRealEstateModal');
                        }

                        function showDeleteRealEstateModal(id) {
                            selectedDeleteId = id;
                            showModal('deleteRealEstateModal');
                        }

                        function renderHighlightsChips(highlights) {
                            if (!Array.isArray(highlights) || !highlights.length) return '';
                            return `<div class="highlights-container" style="margin-bottom:0;">` +
                                highlights.map(h => `<span class="highlight-chip">${h}</span>`).join('') +
                                `</div>`;
                        }

                        function renderRealEstates() {
                            const tbody = document.getElementById('realestate-list');
                            tbody.innerHTML = '';
                            if (!realEstates.length) {
                                tbody.innerHTML = `<tr><td colspan="9" style="text-align:center;">No real estate listings found.</td></tr>`;
                                return;
                            }
                            realEstates.forEach(estate => {
                     
                                let img = '';
                                if (estate.images && Array.isArray(estate.images) && estate.images.length > 0) {
                                    const firstImg = estate.images[0];
                            
                                    if (firstImg && typeof firstImg.url === 'string' && firstImg.url.trim() !== '') {
                   
                                        let altText = firstImg.seoAlt && firstImg.seoAlt.trim() !== '' ? firstImg.seoAlt : (estate.title || 'Real Estate Image');
                                        img = `<img src="${firstImg.url}" class="realestate-img-thumb" alt="${altText}">`;
                                    } else {
                                        img = `<span style="color:#aaa;">No Image</span>`;
                                    }
                                } else {
                                    img = `<span style="color:#aaa;">No Image</span>`;
                                }
                                let highlightsHtml = renderHighlightsChips(estate.highlights);
                                let statusBtn = `<button class="style-3" onclick="toggleActive('${estate._id}')">${estate.isActive ? 'Active' : 'Inactive'}</button>`;
                                let actions = `
                                    <div class="action-btns" style="display: flex; gap: 8px;">
                                        <button class="style-1" onclick="showEditRealEstateModal('${estate._id}')"><i class="fa fa-pencil"></i></button>
                                        <button class="style-3" onclick="showDeleteRealEstateModal('${estate._id}')"><i class="fa fa-trash"></i></button>
                                        ${statusBtn}
                                    </div>
                                `;
                                tbody.innerHTML += `
                                    <tr>
                                        <td>${img}</td>
                                        <td>${estate.title}</td>
                                        <td>${estate.category}</td>
                                        <td>${estate.location}</td>
                                        <td>${estate.price ? estate.price : ''}</td>
                                        <td>${estate.area}</td>
                                        <td>${highlightsHtml}</td>
                                        <td>${estate.isActive ? '<span style="color:green;">Active</span>' : '<span style="color:red;">Inactive</span>'}</td>
                                        <td>${actions}</td>
                                    </tr>
                                `;
                            });
                        }

                        // Add Real Estate
                        document.getElementById('addRealEstateForm').addEventListener('submit', async function(e){
                            e.preventDefault();
                            const form = e.target;
                            const formData = new FormData(form);
                            // Highlights as JSON string
                            let highlights = addHighlightsUI.get();
                            formData.set('highlights', JSON.stringify(highlights));
                            // Price as string (already string from input)
                            formData.set('price', formData.get('price') ? formData.get('price').toString() : '');

                            try {
                                const res = await fetch('/createRealEstate', {
                                    method: 'POST',
                                    body: formData
                                });
                                if (!res.ok) throw new Error('Failed to add');
                                const data = await res.json();
                                realEstates.push(data);
                                renderRealEstates();
                                closeModal('addRealEstateModal');
                            } catch (err) {
                                alert('Failed to add real estate.');
                            }
                        });

                        // Edit Real Estate
                        document.getElementById('editRealEstateForm').addEventListener('submit', async function(e){
                            e.preventDefault();
                            const form = e.target;
                            const id = document.getElementById('editId').value;
                            const formData = new FormData(form);
                            // Highlights as JSON string
                            let highlights = editHighlightsUI.get();
                            formData.set('highlights', JSON.stringify(highlights));
                            // Price as string (already string from input)
                            formData.set('price', formData.get('price') ? formData.get('price').toString() : '');

                            try {
                                const res = await fetch(`/editRealEstate/${id}`, {
                                    method: 'PUT',
                                    body: formData
                                });
                                if (!res.ok) throw new Error('Failed to update');
                                const data = await res.json();
                                // Update in local array
                                const idx = realEstates.findIndex(e => e._id === id);
                                if (idx !== -1) realEstates[idx] = data;
                                renderRealEstates();
                                closeModal('editRealEstateModal');
                            } catch (err) {
                                alert('Failed to update real estate.');
                            }
                        });

                        // Delete Real Estate
                        document.getElementById('confirmDeleteBtn').addEventListener('click', async function(){
                            if (!selectedDeleteId) return;
                            try {
                                const res = await fetch(`/deleteRealEstate/${selectedDeleteId}`, {
                                    method: 'DELETE'
                                });
                                if (!res.ok) throw new Error('Failed to delete');
                                realEstates = realEstates.filter(e => e._id !== selectedDeleteId);
                                renderRealEstates();
                                closeModal('deleteRealEstateModal');
                                selectedDeleteId = null;
                            } catch (err) {
                                alert('Failed to delete real estate.');
                            }
                        });

                        // Toggle Active/Inactive
                        async function toggleActive(id) {
                            try {
                                const res = await fetch(`/toggleRealEstate/${id}/toggle`, {
                                    method: 'PATCH'
                                });
                                if (!res.ok) throw new Error('Failed to toggle');
                                const data = await res.json();
                                const idx = realEstates.findIndex(e => e._id === id);
                                if (idx !== -1) realEstates[idx].isActive = data.isActive;
                                renderRealEstates();
                            } catch (err) {
                                alert('Failed to toggle status.');
                            }
                        }

                        // Initial render
                        renderRealEstates();
                    </script>
                    <!-- /main-content -->
                </div>
                <!-- /section-content-right -->
            </div>
            <!-- /layout-wrap -->
        </div>
        <!-- /#page -->
    </div>
