                <!-- Pagination -->
                <% if (totalPages && totalPages > 1) { %>
                <div class="bs-pagination d-flex justify-content-center mt-4">
                    <% 
                        // Helper to build query string with updated page
                        function buildQuery(page) {
                            let params = [];
                            if (selectedCategory) params.push('category=' + encodeURIComponent(selectedCategory));
                            if (selectedLocation) params.push('location=' + encodeURIComponent(selectedLocation));
                            if (typeof limit !== 'undefined') params.push('limit=' + encodeURIComponent(limit));
                            params.push('page=' + page);
                            return params.length ? '?' + params.join('&') : '';
                        }
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);
                        if (endPage - startPage < 4) {
                            if (startPage === 1) endPage = Math.min(totalPages, startPage + 4);
                            else if (endPage === totalPages) startPage = Math.max(1, endPage - 4);
                        }
                    %>
                    <a class="pagi-elm <%= currentPage === 1 ? 'disabled' : '' %>" 
                        href="<%= currentPage === 1 ? '#' : buildQuery(currentPage - 1) %>" 
                        aria-label="Previous">
                        <i class="fa-solid fa-angles-left"></i>
                    </a>
                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <a class="pagi-elm <%= currentPage === i ? 'is-active' : '' %>" 
                            href="<%= buildQuery(i) %>" 
                            aria-label="Page <%= i %>">
                            <%= i %>
                        </a>
                    <% } %>
                    <a class="pagi-elm <%= currentPage === totalPages ? 'disabled' : '' %>" 
                        href="<%= currentPage === totalPages ? '#' : buildQuery(currentPage + 1) %>" 
                        aria-label="Next">
                        <i class="fa-solid fa-angles-right"></i>
                    </a>
                </div>
                <% } %>
            </div>
