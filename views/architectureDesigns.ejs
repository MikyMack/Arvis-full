                                        let imgAlt = (arch.images && arch.images.length && arch.images[0].seoAlt && arch.images[0].seoAlt.trim() !== '') 
                                            ? arch.images[0].seoAlt 
                                            : arch.title;
                                    %>
                                    <img src="<%= imgSrc %>" alt="<%= imgAlt %>" style="width: 100%; height: 100%; object-fit: cover;">
                                </a>
                            </div>
                            <h4 class="bs-h-1 item-title wa-skew-1 mt-3">
                                <a href="/architectureDetails/<%= arch._id %>" aria-label="<%= arch.title %>"><%= arch.title %></a>
                            </h4>
                            <div class="text-muted small mt-1">
                                <%= arch.category %>
                                <% if (arch.location) { %> | <%= arch.location %> <% } %>
                            </div>
                        </div>
                        <% /* Add clearfix after every 3 items for row break if needed */ %>
                        <% if ((idx + 1) % 3 === 0) { %>
                            <div class="w-100"></div>
                        <% } %>
                    <% }) %>
