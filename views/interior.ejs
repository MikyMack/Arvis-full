    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Calculate buttons
            const calcButtons = document.querySelectorAll('.luxe-calc-btn');

            calcButtons.forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const form = this.closest('.luxe-calc-form');
                    const result = form.querySelector('.luxe-result');
                    const placeholder = form.querySelector('.luxe-result-placeholder');

                    // Show loading state
                    result.style.display = 'block';
                    placeholder.style.display = 'block';

                    // Simulate calculation delay
                    setTimeout(() => {
                        placeholder.style.display = 'none';

                        // Get input values
                        const cardType = this.closest('.luxe-calc-card').classList.contains('full-home-card') ? 'home' :
                            this.closest('.luxe-calc-card').classList.contains('kitchen-card') ? 'kitchen' : 'wardrobe';

                        // Perform calculations based on card type
                        let estimate = calculateEstimate(cardType, form);

                        // Display result
                        result.innerHTML = `
                    <div class="luxe-result-content">
                        <h4>Estimated Cost</h4>
                        <div class="luxe-result-price">₹${estimate.toLocaleString()}</div>
                        <div class="luxe-result-details">
                            ${getResultDetails(cardType, estimate)}
                        </div>
                    </div>
                `;

                        // Scroll to result
                        result.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }, 1500);
                });
            });

            // Calculation functions
            function calculateEstimate(type, form) {
                if (type === 'home') {
                    const area = parseFloat(form.querySelector('.luxe-input').value) || 0;
                    const quality = form.querySelector('.luxe-select').value;

                    let rate = 800; // default standard
                    if (quality === 'premium') rate = 1200;
                    if (quality === 'luxury') rate = 2000;

                    return Math.round(area * rate * 1.18); // including GST
                }
                else if (type === 'kitchen') {
                    const area = parseFloat(form.querySelector('.luxe-input').value) || 0;
                    const kitchenType = form.querySelector('.luxe-select').value;

                    let base = 75000;
                    if (kitchenType === 'standard') base = 120000;
                    if (kitchenType === 'high-end') base = 200000;

                    return Math.round(base + (area * 500 * 1.18)); // including GST
                }
                else { // wardrobe
                    const width = parseFloat(form.querySelectorAll('.luxe-input')[0].value) || 0;
                    const height = parseFloat(form.querySelectorAll('.luxe-input')[1].value) || 0;
                    const material = form.querySelector('.luxe-select').value;

                    let rate = 1200; // plywood
                    if (material === 'mdf') rate = 1800;
                    if (material === 'hdhmr') rate = 2500;

                    return Math.round((width * height * rate * 1.18)); // including GST
                }
            }

            function getResultDetails(type, estimate) {
                if (type === 'home') {
                    return `Includes modular kitchen, wardrobes, furniture, false ceiling, and complete interior work.`;
                }
                else if (type === 'kitchen') {
                    return `Includes cabinets, countertop, backsplash, appliances (optional), and installation.`;
                }
                else {
                    return `Includes sliding/shutter options, internal organization, and professional installation.`;
                }
            }
        });


